<div class="container mt-3">

  <%= link_to "New Employee", new_employee_path, class: "btn btn-primary float-end" %>
  <h1>Employees</h1>

  <div id="employees">
    <table class="table table-striped table-hover table-bordered">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone #</th>
        <th>Crew</th>
        <th>Role</th>
        <th>Tier</th>
        <th>Division</th>
        <th>Hours</th>
      </tr>
      </thead>
      <tbody>

      <% @employees.each do |employee| %>
        <%= render employee %>
      <% end %>
      </tbody>
    </table>
  </div>

</div>
