<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col">

      <%= form.label :name, style: "display: block", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="col">
      <%= form.label :email, class: "form-label" %><br>
      <%= form.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= form.label :role_id, style: "display: block", class: "form-label" %>
      <%= collection_select(

            :user, :role_id, Role.all, :id, :name, { prompt: true }, { class: "form-select" }
          ) %>
    </div>
    <div class="col">
      <%= form.label :password, class: "form-label" %><br>
      <%= form.password_field :password, placeholder: "Leave blank if unchanged", class: "form-control" %>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
