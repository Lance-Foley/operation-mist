<div class="container-fluid">
  <h1>Phases</h1>


</div>
<div class="mt-3">

  <table class="table table-secondary table-striped">
    <thead>
    <tr>
      <th scope="col">Phase</th>
      <th scope="col">Crew</th>
      <th scope="col">Division</th>
      <th scope="col">Start Date</th>
      <th scope="col">End Date</th>
      <th scope="col">Bid Hour</th>
      <th scope="col">Hours Per Week</th>
      <th scope="col">Weeks</th>
    </tr>
    </thead>
    <tbody>
    <% @jobs.each do |p| %>
      <tr>
        <th> <%= link_to p.phase, p %> </th>
        <th> <%= Crew.where(id: p.crew_id).first.name %> </th>
        <th> <%= p.division %> </th>
        <th> <%= p.start_date.strftime('%m/%d/%Y') %> </th>
        <th> <%= p.end_date.strftime('%m/%d/%y') %> </th>
        <th> <%= p.man_hours %> </th>
        <th> <%= p.hours_per_week %> </th>
        <th> <%= p.weeks %> </th>
      </tr>

    <% end %>
    </tbody>
  </table>


</div>
