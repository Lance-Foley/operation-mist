<div class="card mb-3 mt-3">
  <div class="card-header">
    <%= link_to "Edit", edit_client_path(@client), class: "btn-sm btn-primary text-warning float-end" %>

    <div class="card-title">
      <%= @client.name %>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col">
        <p> Address: <%= @client.address %></p>
        <p>Phone # <%= @client.phone_number %></p>
        <p>Email: <%= @client.email %> </p>

      </div>
      <div class="col">

        <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Total Projects
            <span class="badge bg-primary rounded-pill"><%= Project.where(client_id: @client.id).count %></span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Total Costs
            <span class="badge bg-primary rounded-pill"><%= number_to_currency(Project.where(client_id: @client.id).sum(:cost)) %></span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Total Sub Costs
            <span class="badge bg-primary rounded-pill"><%= number_to_currency(Project.where(client_id: @client.id).sum(:sub_cost)) %></span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

