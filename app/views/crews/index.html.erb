<div class="container mt-3">


  <%= link_to "New Crew", new_crew_path, class: "btn btn-primary float-end" %>
  <h1>Crews</h1>

  <div id="crews">
    <div id="roles">
      <table class="table table-striped table-hover table-bordered">
        <thead>
        <th scope="col">Name</th>
        <th scope="col">Division</th>
        <th scope="col">Size</th>
        <th scope="col">Foreman</th>
        <th scope="col">E_Rating</th>
        </thead>
        <tbody>
        <% @crews.each do |crew| %>
          <%= render crew %>
        <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>