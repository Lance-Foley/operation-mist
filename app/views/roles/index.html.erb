<div class="container mt-3">

  <%= link_to "New role", new_role_path, class: "btn btn-primary float-end" %>
  <h1>Roles</h1>

  <div id="roles">
    <table class="table table-striped table-hover table-bordered">
      <thead>
      <tr>

        <th scope="col">Role</th>
        <th scope="col">Description</th>
        <th scope="col">View</th>
      </tr>
      </thead>
      <tbody>
      <% @roles.each do |role| %>
        <%= render role %>
      <% end %>
      </tbody>
    </table>
  </div>

</div>
