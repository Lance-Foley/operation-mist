<p style="color: green"><%= notice %></p>

<h1>Divisions</h1>

<div id="divisions">

  <table class="table table-striped table-hover table-bordered">
    <thead>
    <th scope="col">Name</th>
    <th scope="col">Hours Per Week</th>
    <th scope="col">3 Month Hours</th>
    <th scope="col">6 Month Hours</th>
    <th scope="col">9 Month Hours</th>
    <th scope="col">12 Month Hours</th>
    <th scope="col">View</th>


    </thead>
    <tbody>
  <% @divisions.each do |division| %>
    <%= render division %>
  <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New division", new_division_path %>
