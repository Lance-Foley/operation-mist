<script src="https://code.highcharts.com/gantt/highcharts-gantt.js"></script>
<script src="https://code.highcharts.com/gantt/modules/exporting.js"></script>
<script src="https://code.highcharts.com/gantt/modules/accessibility.js"></script>
<div class="scrolling-container">
  <div id="container"></div>
</div>
<style>
    #container {
        max-width: 85%;
        min-width: 100vh;
        height: 85vh;
        margin: 1em auto;
    }

    .scrolling-container {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }
</style>


<script type="text/javascript" charset="utf-8">
    let today = new Date(),
        day = 1000 * 60 * 60 * 24;

    today.setUTCHours(0);
    today.setUTCMinutes(0);
    today.setUTCSeconds(0);
    today.setUTCMilliseconds(0);
    today = today.getTime();

    let dateFormat = Highcharts.dateFormat;
    let series

    async function loadJobs() {
        const response = await fetch('http://localhost:3000/api/v1/charts/index');
        const jobs = await response.json();

        series = jobs.map(function (job, i) {
            let data = job.deals.map(function (phase) {
                return {
                    id: 'deal-' + i,
                    project: phase.project,
                    start: new Date(phase.from).getTime(),
                    end: new Date(phase.to).getTime(),
                    y: i
                };
            });
            return {
                name: job.name,
                data: data,
                current: job.deals[job.current]
            };
        });
        console.log(series);
        await Highcharts.ganttChart('container', {
            series: series,
            title: {
                text: 'Crew Schedule'
            },
            tooltip: {
                pointFormat: '<span>Rented To: {point.project}</span><br/><span>From: {point.start:%e. %b}</span><br/><span>To: {point.end:%e. %b}</span>'
            },
            lang: {
                accessibility: {
                    axis: {
                        xAxisDescriptionPlural: 'The chart has a two-part X axis showing time in both week numbers and days.',
                        yAxisDescriptionSingular: 'The chart has a tabular Y axis showing a data table row for each point.'
                    }
                }
            },

            scrollbar: {
                enabled: true
            },

            rangeSelector: {
                enabled: true,
                selected: 0
            },
            accessibility: {
                keyboardNavigation: {
                    seriesNavigation: {
                        mode: 'serialize'
                    }
                },
                point: {
                    valueDescriptionFormat: 'Assigned to {point.project} from {point.x:%A, %B %e} to {point.x2:%A, %B %e}.'
                },
                series: {
                    descriptionFormatter: function (series) {
                        return series.name + ', job ' + (series.index + 1) + ' of ' + series.chart.series.length + '.';
                    }
                }
            },
            xAxis: {
                currentDateIndicator: true
            },


            navigator: {
                enabled: true,
                liveRedraw: true,
                series: {
                    type: 'gantt',
                    pointPlacement: 0.5,
                    pointPadding: 0.25,
                    accessibility: {
                        enabled: false
                    }
                },
                yAxis: {
                    min: 0,
                    max: 3,
                    reversed: true,
                    categories: []
                }
            },


            yAxis: {
                type: 'category',
                grid: {
                    columns: [{
                        title: {
                            text: 'Crew'
                        },
                        categories: series.map(function (s) {
                            return s.name;
                        })
                    }, {
                        title: {
                            text: 'Assigned To'
                        },
                        categories: series.map(function (s) {
                            return s.current.project;
                        })
                    }, {
                        title: {
                            text: 'From'
                        },
                        categories: series.map(function (s) {
                            return s.current.from;
                        })
                    }, {
                        title: {
                            text: 'To'
                        },
                        categories: series.map(function (s) {
                            return s.current.to;
                        },)
                    }]
                }
            },

        });
    }

    loadJobs();
</script>