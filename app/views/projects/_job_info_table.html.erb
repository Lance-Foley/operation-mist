<div class="container-fluid">
  <h1>Phases</h1>
  <%= link_to "New Phase", project_phase_path, class: "btn btn-primary float-end " %>


</div>
<div class="mt-3">

  <table class="table table-info table-striped">
    <thead>
    <tr>
      <th scope="col">Phase</th>
      <th scope="col">Crew</th>
      <th scope="col">Contract</th>
      <th scope="col">Sub Contract</th>
      <th scope="col">Division</th>
      <th scope="col">Start Date</th>
      <th scope="col">End Date</th>
      <th scope="col">Bid Hour</th>
      <th scope="col">Hours Per Week</th>
      <th scope="col">Weeks</th>
    </tr>
    </thead>
    <tbody>
    <% @jobs.each do |p| %>
      <tr>
        <th> <%= link_to p.phase, p %> </th>
        <th> <%= p.crew %> </th>
        <th> <%= number_to_currency(p.total_cost, :unit => "$") %> </th>
        <th> <%= number_to_currency(p.sub_cost, :unit => "$") %> </th>
        <th> <%= p.division %> </th>
        <th> <%= p.start_date.strftime('%m/%d/%Y') %> </th>
        <th> <%= p.end_date.strftime('%m/%d/%y') %> </th>
        <th> <%= p.man_hours %> </th>
        <th> <%= p.hours_per_week %> </th>
        <th> <%= p.weeks %> </th>
      </tr>

    <% end %>
    </tbody>
  </table>


</div>
