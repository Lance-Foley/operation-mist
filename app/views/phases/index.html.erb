<div class="container mt-3">


  <%= link_to "New Phase", new_phase_path, class: "btn btn-primary float-end" %>
  <h1>Phases</h1>

  <div id="phases">

    <table class="table table-striped table-hover table-bordered">
      <thead>
      <th scope="col">Name</th>
      <th scope="col">Per Week (<small>Hours</small>)</th>
      <th scope="col">3 Month (<small>Hours</small>)</th>
      <th scope="col">6 Month (<small>Hours</small>)</th>
      <th scope="col">9 Month (<small>Hours</small>)</th>
      <th scope="col">12 Month (<small>Hours</small>)</th>


      </thead>
      <tbody>


      <% @phases.each do |phase| %>
        <%= render phase %>

      <% end %>
      </tbody>
    </table>

  </div>

</div>
