<div class="row">
  <% render_billable_division.each do |n| %>
    <div class="col-6">
      <div class="card mt-2">

        <%= column_chart [
                           { name: "Contracted Hours", data: Crew
                             .group(:name)
                             .where(division_id: Division.find_by_name(n).id,).joins(:division).where(@division.billable?).sum(Job.where(division: n).sum(:three_month_hours).to_i) },
                           { name: "Workforce Hours", data: Crew
                             .group(:name)
                             .where(division_id: Division.find_by_name(n).id).joins(:division).where(@division.billable?).sum(Employee.where(division: n).sum(:man_hours_three_months).to_i) }],
                         library: {
                           label: {
                             style: {
                               color: '#ffffff'
                             }
                           },
                           title: {
                             text: n,
                             style: {
                               color: '#ffffff',
                               fontWeight: 'bold'
                             }
                           },
                           chart: {
                             backgroundColor: 'transparent',
                             type: 'line'
                           },
                           plotOptions: {
                             series: {
                               dataLabels: {
                                 enabled: true,
                                 color: 'white',
                                 format: '{point.y:,.1f}'
                               }
                             }
                           },

                           xAxis: {
                             categories: {
                             },
                             labels: {
                               enabled: true,

                             }
                           },
                           legend: {
                             itemStyle: {
                               color: 'white'
                             }
                           }
                         }
        %>
       

      </div>
    </div>
  <% end %>
</div>

