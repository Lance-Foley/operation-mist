<div class="container">
  <div class="row">
    <div class="col">
      <h1>Jobs</h1>
    </div>
    <div class="col">
      <%= link_to "New job", new_job_path, class: "btn btn-secondary float-end" %>
    </div>
  </div>
  <div id="jobs">
    <table class="table table-striped table-hover table-bordered">
      <thead>
      <th scope="col">Name</th>
      <th scope="col">Crew</th>
      <th scope="col">Phase</th>
      </thead>
      <tbody>
      <% @jobs.each do |job| %>
        <%= render job %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
