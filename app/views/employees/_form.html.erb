<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="row">
    <div class="col">
      <%= form.label :name, style: "display: block", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="col">
      <%= form.label :email, style: "display: block", class: "form-label" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <div class="col">
      <%= form.label :phone_number, style: "display: block", class: "form-label" %>
      <%= form.text_field :phone_number, class: "form-control" %>
    </div>
  </div>
  <div class="row">

    <div class="col">
      <%= form.label :crew, style: "display: block", class: "form-label" %>
      <%= form.collection_select(:crew, Crew.all.collect, :name, :id) %>

    </div>

    <div class="col">
      <%= form.label :role, style: "display: block", class: "form-label" %>
      <%= form.select :role, Role.all.collect { |p| [p.name] }, class: "form-select" %>

    </div>
    <div class="col">
      <%= form.label :tier, style: "display: block", class: "form-label" %>
      <%= form.select :tier, Employee.tiers.keys.to_a, class: "form-select" %>

    </div>
    <div class="col">
      <%= form.label :division, style: "display: block", class: "form-label" %>
      <%= form.select :division, Division.all.collect { |p| [p.name] }, class: "form-select" %>
    </div>
    <div class="col">
      <%= form.label :man_hours_per_week, style: "display: block", class: "form-label" %>
      <%= form.text_field :man_hours_per_week, class: "form-control" %>
    </div>
  </div>


  <div>


    <%= form.submit class: "btn btn-primary" %>


  </div>
<% end %>

