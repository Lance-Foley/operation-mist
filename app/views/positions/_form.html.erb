<%= form_with(model: position) do |form| %>
  <% if position.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(position.errors.count, "error") %> prohibited this position from being saved:</h2>

      <ul>
        <% position.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="forms-inputs mb-4">
    <%= form.label :name, style: "display: block", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="forms-inputs mb-4">
    <%= form.label :description, style: "display: block", class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class=" forms-inputs form-check mt-3">
    <%= form.check_box :pm, class: "form-check-input" %>
    <small class="form-check-label">check if position will be in charge on projects <br>(Project Management, Project
      Lead, etc..)</small>
  </div>


  <div class="mt-3">
    <div class="btn-group btn-group  float-end" role="group" aria-label="...">

      <%= form.submit "Submit", class: "btn btn-warning float-end" %>
      <%= link_to "Back", :back, class: "btn btn-primary " %>

    </div>
  </div>
<% end %>
