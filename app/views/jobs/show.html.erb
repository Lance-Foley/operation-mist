<p style="color: green"><%= notice %></p>
<div class="container">
  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col">
          <h2>Job: <%= @job.name %></h2>
          <h5>Crew: <%= @job.crew %></h5>
        </div>
        <div class="col">
          <p class="">Contract: <%= number_to_currency(@job.total_cost, :unit => "$") %></p>
          <p class="">Sub Cost: <%= number_to_currency(@job.sub_cost, :unit => "$") %></p>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col">
          <h6>Division: <%= @job.division %> <p>Phase: <%= @job.phase %></p></h6>
          <p>Starting <%= @job.start_date.strftime('%m/%d/%Y') %></p>
          <p>Ending<%= @job.end_date.strftime('%m/%d/%y') %></p>

        </div>
        <div class="col">
          <h6>Hours: <%= @job.man_hours %> <p>Remaining Hours <%= @job.hours_remaining %></p></h6>
          <p>Hours Per Week <%= @job.hours_per_week %></p>
          <p>Week(s) <%= @job.weeks %></p>
          <p>Remaining Week(s): <%= @job.week_remaining %></p>


        </div>
      </div>
    </div>
    <div class="card-footer">
      <div class="row">
        <div class="col">
          <p>3 Month Hours: <%= @job.three_month_hours %></p>
        </div>
        <div class="col">
          <p>6 Month Hours: <%= @job.six_month_hours %></p>
        </div>
        <div class="col">
          <p>9 Month Hours: <%= @job.nine_month_hours %></p>
        </div>
        <div class="col">
          <p>12 Month Hours: <%= @job.twelve_month_hours %></p>
        </div>
      </div>
    </div>


  </div>
  <%= link_to "Back", jobs_path, class: "btn btn-secondary" %> |
  <%= link_to "Edit", edit_job_path(@job), class: "btn btn-secondary" %>
</div>