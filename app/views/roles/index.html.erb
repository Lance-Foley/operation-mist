<div class="container">


  <h1>Roles</h1>
  <%= link_to "New role", new_role_path, class: "btn btn-secondary float-end" %>

  <div id="roles">
    <table class="table table-striped table-hover table-bordered">
      <thead>
      <th scope="col">Name</th>
      <th scope="col">Amount</th>
      </thead>
      <tbody>
      <% @roles.each do |role| %>
        <%= render role %>
      <% end %>
      </tbody>
    </table>
  </div>

</div>
