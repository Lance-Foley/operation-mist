<div class="container-fluid">
  <h1>Phases</h1>


</div>
<div class="mt-3">

  <table class="table table-primary table-striped">
    <thead>
    <tr>
      <th scope="col">Phase</th>
      <th scope="col">Crew</th>
      <th scope="col">Division</th>
      <th scope="col">Start Date</th>
      <th scope="col">End Date</th>
      <th scope="col">Bid Hour</th>
      <th scope="col">Hours Per Week</th>
      <th scope="col">Weeks</th>
      <th scope="col">E-Rating</th>
    </tr>
    </thead>
    <tbody>
    <% @jobs.each do |p| %>
      <tr>
        <th> <%= link_to p.phase, edit_job_path(p), class: "text-info" %> </th>
        <th> <%= p.crew_name %> </th>
        <th> <%= p.division_name %> </th>
        <th> <%= p.start_date.strftime('%m/%d/%Y') %> </th>
        <th> <%= p.end_date.strftime('%m/%d/%y') %> </th>
        <th> <%= p.man_hours %> </th>
        <th> <%= p.hours_per_week %> </th>
        <th> <%= p.weeks %> </th>
        <th> <%= p.e_rating %>%</th>
      </tr>

    <% end %>
    </tbody>
  </table>


</div>
