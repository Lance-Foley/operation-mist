<h1>Roles</h1>

<div id="roles">
  <table class="table table-striped table-hover table-bordered">
    <thead>
    <th scope="col">Name</th>
    <th scope="col">View</th>
    </thead>
    <tbody>
    <% @roles.each do |role| %>
      <%= render role %>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New role", new_role_path %>
