<div class="col-12 col-sm-12 col-md-6 mb-3 mt-3">
  <div class="card">
    <div class="card-header">
      <h5 class="text-center">Field 1
        Foreman:
        <%= crew_foreman(1) %></h5>
    </div>
    <div class="container mt-3">
      <div class="row">
        <div class="col">
          <h6 class="text-center">3 Month Workload</h6>
          <%= column_chart dashboard_field_one_workload_path %>
        </div>
        <div class="col">
          <h6 class="text-center">Week Workload</h6>
          <%= column_chart dashboard_week_workload_path %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="card-body">
            <div class="row">
              <div class="col">
                <p class="text-center">Scheduled</p>
                <h4 class="text-center">M/<%= crew_months_remaining(1).round(2) %></h4>
              </div>
              <div class="col">
                <p class="text-center">E-Rating</p>
                <h4 class="text-center">98%</h4>
              </div>
            </div>
          </div>
          <div class="container">
            <hr class="dropdown-divider">
            <h6 class="text-center">Crew</h6>
            <li class="text-center">
              <%= crew_list("Carpenter", 1) %>
            </li>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>